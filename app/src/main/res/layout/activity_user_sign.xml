<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tag="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ccc.tcl.com.sprotappui.activity.UserSignActivity">

    <include layout="@layout/toolbar_general" ></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        >
        <com.dl7.tag.TagView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tag:tag_border_radius="8dp"/>
        <EditText
            android:id="@+id/sign_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/user_sign_hint"
            android:gravity="start"
            android:padding="@dimen/activity_vertical_margin"
            android:background="@null"/>
        <TextView
            android:id="@+id/content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:text="0/100"
            android:layout_gravity="bottom|end"/>
    </FrameLayout>




</LinearLayout>
