<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ccc.tcl.com.sprotappui.activity.ScoreActivity">

    <include layout="@layout/toolbar_general" />

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/activity_horizontal_margin_small"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:contentPaddingBottom="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_person_grade"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_content_size_xx_big"
                android:text="@string/score_walk"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_padding"
                android:paddingEnd="@dimen/activity_vertical_padding_big"
                android:background="@mipmap/type_background"
                />

            <ImageView
                android:id="@+id/user_score_share_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_share"/>
            <TextView
                android:id="@+id/user_score_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_score_share_walk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_content_size_xxx_big"
                android:text="22100"/>

            <TextView
                android:id="@+id/user_score_walk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="@dimen/activity_content_size_x_big"
                android:layout_below="@+id/user_score_walk"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:text="80分32秒"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/activity_horizontal_margin_small"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/background_person_grade"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_content_size_xx_big"
                android:text="@string/score_max_run_dis"
                android:paddingRight="30dp"
                android:padding="@dimen/activity_horizontal_padding"

                android:background="@mipmap/type_background"
                android:gravity="center" />

            <ImageView
                android:id="@+id/user_score_share_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="@dimen/activity_vertical_padding"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_share"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
            <TextView
                android:id="@+id/user_score_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_score_share_run"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_content_size_xxx_big"
                android:text="12121"/>

            <TextView
                android:id="@+id/user_score_run_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="@dimen/activity_content_size_x_big"
                android:layout_below="@+id/user_score_run"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:text="20分33秒"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/p1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/p7"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:src="@drawable/p8"/>
    </FrameLayout>



</LinearLayout>
