<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context="ccc.tcl.com.sprotappui.activity.SettingActivity">
    <include layout="@layout/toolbar_general"/>

    <LinearLayout
        android:id="@+id/head"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        android:orientation="vertical"
        android:background="@color/black_background">
        <RelativeLayout
            android:id="@+id/setting_message_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snow"
            android:padding="@dimen/activity_vertical_padding_big">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_word_base"
                android:textSize="@dimen/activity_content_size_mid"
                android:text="消息设置"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_keyboard_arrow_next"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snow"
            android:layout_marginTop="2px"
            android:padding="@dimen/activity_vertical_padding_big">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_word_base"
                android:textSize="@dimen/activity_content_size_mid"
                android:text="清除缓存"/>
            <ImageView
                android:id="@+id/setting_clear_cache_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_keyboard_arrow_next"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/setting_clear_cache_image"
                android:text="3.3MB"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_set_sport_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snow"
            android:layout_marginTop="2px"
            android:padding="@dimen/activity_vertical_padding_big">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_word_base"
                android:layout_centerVertical="true"
                android:textSize="@dimen/activity_content_size_mid"
                android:text="设置运动权限"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_keyboard_arrow_next"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/black_background">
        <RelativeLayout
            android:id="@+id/setting_sport_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snow"
            android:padding="@dimen/activity_vertical_padding_big">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_word_base"
                android:textSize="@dimen/activity_content_size_mid"
                android:text="运动id"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="3215445"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snow"
            android:layout_marginTop="2px"
            android:padding="@dimen/activity_vertical_padding_big">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_word_base"
                android:layout_centerVertical="true"
                android:textSize="@dimen/activity_content_size_mid"
                android:text="关于运动"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/setting_about_app"/>
        </RelativeLayout>
    </LinearLayout>

    <com.dl7.tag.TagView
        android:id="@+id/login_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_content_size_big"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        app:tag_shape = "arc"
        app:tag_text_size="@dimen/activity_content_size_big"
        app:tag_press_feedback="true"
        app:tag_horizontal_padding="@dimen/button_padding_left"
        app:tag_vertical_padding="@dimen/button_padding_top"
        app:tag_bg_color = "@color/darkturquoise"
        app:tag_border_color = "@color/darkturquoise"
        app:tag_bg_color_check="@color/red"
        app:tag_text_color = "@color/white"
        app:tag_text="退出"/>
</RelativeLayout>
