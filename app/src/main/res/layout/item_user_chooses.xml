<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/page_content_margin_top_big"
    android:paddingBottom="@dimen/page_content_margin_top_big"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/choose_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/choose_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_content_size_big"
        android:layout_marginLeft="@dimen/page_content_margin_left"/>

</LinearLayout>