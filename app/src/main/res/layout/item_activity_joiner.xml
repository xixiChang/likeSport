<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/item_margin_top"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_ac_joiner_head"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_ac_joiner_head"
        android:layout_marginLeft="@dimen/page_content_margin_left"
        >
        <TextView
            android:id="@+id/item_ac_joiner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_content_size_big" />
        <TextView
            android:id="@+id/item_ac_joiner_retain"
            android:layout_below="@+id/item_ac_joiner_name"
            android:layout_marginTop="@dimen/activity_horizontal_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_content_size_mid" />
    </RelativeLayout>

</RelativeLayout>