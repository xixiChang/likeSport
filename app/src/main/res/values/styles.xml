<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryDark">@color/app_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionMenuTextColor">@color/black_word_base</item>
        <item name="android:textSize">@dimen/activity_content_size_mid</item>
        </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="beautyTheme" parent="AppTheme"></style>
    <!--隐藏状态栏-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BaseAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/transparent_color</item>    <!-- 状态栏 -->
        <item name="colorPrimaryDark">@color/transparent_color</item> <!-- toolbar -->
        <item name="colorAccent">@color/colorAccent</item>  <!-- 重点 -->
    </style>
</resources>
